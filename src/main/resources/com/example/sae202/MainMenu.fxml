<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>

<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sae202.MainMenuController" stylesheets="@app.css">
    <children>
        <!-- Background image with blur effect -->
        <ImageView fitWidth="800" fitHeight="600">
            <Image url="@ChessBoard.png"/>
            <effect>
                <GaussianBlur radius="20"/>
            </effect>
        </ImageView>

        <!-- Overlay for the title -->
        <VBox alignment="CENTER" spacing="20" prefWidth="800" prefHeight="600">
            <VBox alignment="CENTER" styleClass="title-border">
                <Label text="Sae Chess" styleClass="label-title"/>
            </VBox>
            <Button text="Jouer" onAction="#handleStartGame" />
            <Button text="Exit" onAction="#handleExit" />
        </VBox>
    </children>
</AnchorPane>
